{
  "name": "lorreen-store",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && npx electron .vscode/electron/main.js",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "build:web": "vite build",
    "build:electron": "electron-builder -w",
    "dist": "npm run build:web && npm run build:electron",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.jsx"
  },
  "build": {
    "appId": "com.lorreen.store",
    "productName": "Lorreen Store",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "buildResources",
      "output": "dist"
    },
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "buildResources/icon.ico",
      "artifactName": "Lorreen-Store-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^39.2.6",
    "electron-builder": "^24.0.0",
    "vite": "^7.2.7",
    "wait-on": "^7.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.8.1"
  }
}
